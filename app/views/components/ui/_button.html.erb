<!--prettier-ignore-->
<% case as %>
<% when :link %>
 <%= link_to href, class: button_classes, data: data do %>
    <%= text %>
  <% end %>
<% when :button %>
  <%= button_tag class: button_classes, data: data do %>
    <%= text %>
  <% end %>
<% when :submit %>
  <%= submit_tag text, class: button_classes, data: data, name: name, value: value %>
<% end %>
