<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Claim: <%= @claim.tracking_id %></h1>
    <div>
      <%= link_to 'Edit', edit_claim_path(@claim), class: 'btn btn-secondary' %>
      <%= link_to 'Back', claims_path, class: 'btn btn-outline-secondary' %>
      <%= link_to 'Download JSON', claim_path(@claim, format: :json), class: 'btn btn-info' %>
      <%= link_to 'Download PDF', claim_path(@claim, format: :pdf), class: 'btn btn-primary' %>
    </div>
  </div>

  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>

  <div class="card mb-4">
    <div class="card-header">
      <h5>Claim Information</h5>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <p><strong>Tracking ID:</strong> <%= @claim.tracking_id %></p>
          <p><strong>Submission Date:</strong> <%= @claim.submission_date&.strftime('%Y-%m-%d %H:%M') %></p>
        </div>
        <div class="col-md-6">
          <p><strong>Collection Key:</strong> <%= @claim.collection_key %></p>
          <p><strong>Language:</strong> <%= @claim.language %></p>
        </div>
      </div>
    </div>
  </div>

  <% if @claim.claimant.present? %>
    <div class="card mb-4">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5>Personal Information</h5>
        <% if @claim.claimant.complete? %>
          <span class="badge bg-success">Complete</span>
        <% else %>
          <span class="badge bg-warning">Incomplete</span>
        <% end %>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <p><strong>Full Name:</strong> <%= @claim.claimant.full_name %></p>
            <p><strong>Email:</strong> <%= @claim.claimant.email %></p>
            <p><strong>Phone:</strong> <%= @claim.claimant.phone %></p>
          </div>
          <div class="col-md-6">
            <p><strong>Date of Birth:</strong> <%= @claim.claimant.date_of_birth&.strftime('%Y-%m-%d') %></p>
            <p><strong>SSN:</strong> <%= @claim.claimant.ssn %></p>
            <p><strong>Completed At:</strong> <%= @claim.claimant.completed_at&.strftime('%Y-%m-%d %H:%M') %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <% if @claim.consents.present? %>
    <div class="card mb-4">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5>Consents</h5>
        <% if @claim.consents.complete? %>
          <span class="badge bg-success">Complete</span>
        <% else %>
          <span class="badge bg-warning">Incomplete</span>
        <% end %>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-4">
            <p>
              <strong>Driver License:</strong>
              <% if @claim.consents.consent_granted?('driver_license') %>
                <span class="text-success">Granted</span>
              <% else %>
                <span class="text-danger">Not Granted</span>
              <% end %>
            </p>
          </div>
          <div class="col-md-4">
            <p>
              <strong>Drug Test:</strong>
              <% if @claim.consents.consent_granted?('drug_test') %>
                <span class="text-success">Granted</span>
              <% else %>
                <span class="text-danger">Not Granted</span>
              <% end %>
            </p>
          </div>
          <div class="col-md-4">
            <p>
              <strong>Biometric:</strong>
              <% if @claim.consents.consent_granted?('biometric') %>
                <span class="text-success">Granted</span>
              <% else %>
                <span class="text-danger">Not Granted</span>
              <% end %>
            </p>
          </div>
        </div>
        <p><strong>Completed At:</strong> <%= @claim.consents.completed_at&.strftime('%Y-%m-%d %H:%M') %></p>
      </div>
    </div>
  <% end %>

  <% if @claim.residence_history.present? && @claim.residence_history.residence_entries.any? %>
    <div class="card mb-4">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5>Residence History</h5>
        <% if @claim.residence_history.complete? %>
          <span class="badge bg-success">Complete</span>
        <% else %>
          <span class="badge bg-warning">Incomplete</span>
        <% end %>
      </div>
      <div class="card-body">
        <p><strong>Total Years:</strong> <%= @claim.residence_history.total_years %></p>
        <p><strong>Completed At:</strong> <%= @claim.residence_history.completed_at&.strftime('%Y-%m-%d %H:%M') %></p>
        
        <h6 class="mt-3">Entries</h6>
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Address</th>
                <th>City</th>
                <th>State/Province</th>
                <th>Country</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Current</th>
                <th>Duration (Years)</th>
              </tr>
            </thead>
            <tbody>
              <% @claim.residence_history.residence_entries.each do |entry| %>
                <tr>
                  <td><%= entry.address %></td>
                  <td><%= entry.city %></td>
                  <td><%= entry.state_province %></td>
                  <td><%= entry.country %></td>
                  <td><%= entry.start_date&.strftime('%Y-%m-%d') %></td>
                  <td><%= entry.end_date&.strftime('%Y-%m-%d') %></td>
                  <td><%= entry.is_current ? 'Yes' : 'No' %></td>
                  <td><%= entry.duration_years %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>

  <% if @claim.employment_history.present? && @claim.employment_history.employment_entries.any? %>
    <div class="card mb-4">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5>Employment History</h5>
        <% if @claim.employment_history.complete? %>
          <span class="badge bg-success">Complete</span>
        <% else %>
          <span class="badge bg-warning">Incomplete</span>
        <% end %>
      </div>
      <div class="card-body">
        <p><strong>Total Years:</strong> <%= @claim.employment_history.total_years %></p>
        <p><strong>Completed At:</strong> <%= @claim.employment_history.completed_at&.strftime('%Y-%m-%d %H:%M') %></p>
        
        <h6 class="mt-3">Entries</h6>
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Company</th>
                <th>Position</th>
                <th>Location</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Current</th>
                <th>Duration (Years)</th>
              </tr>
            </thead>
            <tbody>
              <% @claim.employment_history.employment_entries.each do |entry| %>
                <tr>
                  <td><%= entry.company %></td>
                  <td><%= entry.position %></td>
                  <td><%= "#{entry.city}, #{entry.state_province}, #{entry.country}" %></td>
                  <td><%= entry.start_date&.strftime('%Y-%m-%d') %></td>
                  <td><%= entry.end_date&.strftime('%Y-%m-%d') %></td>
                  <td><%= entry.is_current ? 'Yes' : 'No' %></td>
                  <td><%= entry.duration_years %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>

  <% if @claim.education.present? && @claim.education.education_entries.any? %>
    <div class="card mb-4">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5>Education</h5>
        <% if @claim.education.complete? %>
          <span class="badge bg-success">Complete</span>
        <% else %>
          <span class="badge bg-warning">Incomplete</span>
        <% end %>
      </div>
      <div class="card-body">
        <p><strong>Highest Level:</strong> <%= @claim.education.highest_level %></p>
        <p><strong>Completed At:</strong> <%= @claim.education.completed_at&.strftime('%Y-%m-%d %H:%M') %></p>
        
        <h6 class="mt-3">Entries</h6>
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Institution</th>
                <th>Degree</th>
                <th>Field of Study</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Current</th>
                <th>Location</th>
              </tr>
            </thead>
            <tbody>
              <% @claim.education.education_entries.each do |entry| %>
                <tr>
                  <td><%= entry.institution %></td>
                  <td><%= entry.degree %></td>
                  <td><%= entry.field_of_study %></td>
                  <td><%= entry.start_date&.strftime('%Y-%m-%d') %></td>
                  <td><%= entry.end_date&.strftime('%Y-%m-%d') %></td>
                  <td><%= entry.is_current ? 'Yes' : 'No' %></td>
                  <td><%= entry.location %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>

  <% if @claim.professional_licenses.present? && @claim.professional_licenses.professional_license_entries.any? %>
    <div class="card mb-4">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5>Professional Licenses</h5>
        <% if @claim.professional_licenses.complete? %>
          <span class="badge bg-success">Complete</span>
        <% else %>
          <span class="badge bg-warning">Incomplete</span>
        <% end %>
      </div>
      <div class="card-body">
        <p><strong>Completed At:</strong> <%= @claim.professional_licenses.completed_at&.strftime('%Y-%m-%d %H:%M') %></p>
        
        <h6 class="mt-3">Entries</h6>
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>License Type</th>
                <th>License Number</th>
                <th>Issuing Authority</th>
                <th>Issue Date</th>
                <th>Expiration Date</th>
                <th>Active</th>
                <th>Location</th>
              </tr>
            </thead>
            <tbody>
              <% @claim.professional_licenses.professional_license_entries.each do |entry| %>
                <tr>
                  <td><%= entry.license_type %></td>
                  <td><%= entry.license_number %></td>
                  <td><%= entry.issuing_authority %></td>
                  <td><%= entry.issue_date&.strftime('%Y-%m-%d') %></td>
                  <td><%= entry.expiration_date&.strftime('%Y-%m-%d') %></td>
                  <td><%= entry.is_active ? 'Yes' : 'No' %></td>
                  <td><%= "#{entry.state}, #{entry.country}" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>

  <% if @claim.signature.present? %>
    <div class="card mb-4">
      <div class="card-header">
        <h5>Signature</h5>
      </div>
      <div class="card-body">
        <p><strong>Date:</strong> <%= @claim.signature.date&.strftime('%Y-%m-%d %H:%M') %></p>
        <div class="mt-3">
          <img src="<%= @claim.signature.data %>" alt="Signature" style="max-width: 300px; border: 1px solid #ccc; padding: 10px;">
        </div>
      </div>
    </div>
  <% end %>
</div>