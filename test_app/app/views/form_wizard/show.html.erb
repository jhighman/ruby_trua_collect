<div class="form-wizard-container">
  <div class="form-wizard-progress">
    <div class="form-wizard-progress-bar">
      <div class="form-wizard-progress-bar-fill" style="width: <%= @form_submission.progress_percentage(current_flow) %>%;"></div>
    </div>
    
    <div class="form-wizard-progress-steps">
      <% current_flow.steps.each_with_index do |step_name, index| %>
        <% step_instance = FormWizard.find_step(step_name) %>
        <% next unless step_instance %>
        
        <div class="form-wizard-progress-step <%= 'active' if step_name.to_s == @step %> <%= 'completed' if @form_submission.step_completed?(step_name.to_s) %>">
          <div class="form-wizard-progress-step-number"><%= index + 1 %></div>
          <div class="form-wizard-progress-step-label"><%= step_instance.title %></div>
        </div>
      <% end %>
    </div>
  </div>
  
  <%= render template: "form_wizard/steps/#{@step}" %>
</div>

<style>
  .form-wizard-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
  }
  
  .form-wizard-progress {
